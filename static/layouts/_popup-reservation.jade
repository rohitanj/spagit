//         = popup reservation form         *
#modal-inquiry.modal.fade
  .modal-dialog
    button.close(type='button', data-dismiss='modal', aria-label='Close')
      span(aria-hidden='true') Ã—
    .modal-content
      .modal-header
        .hr-heading
          .h1 Reservation
      .modal-body
        .form-wrap.form-res
          form#mdFormRes(action='/', method='POST')
            .row
              .col-md-12
                .row.input-row
                  .col-xs-12.input-wrap
                    label.label-control(for="mdInputName") Your name #[span.label-warn *]
                    input#mdInputName.form-control(type='text', name='field_name', placeholder='', required)
                  .col-xs-12.input-wrap
                    label.label-control(for="mdInputMail") Your e-mail #[span.label-warn *]
                    input#mdInputMail.form-control(type='email', name='field_mail', placeholder='', required)

              .col-md-12
                //         !datepicker/clockpicker         *
                .row.input-row
                  .col-rs.col-xs-6.input-wrap
                    label.label-control(for='mdInputDate') date
                    input#mdInputDate.form-control.datepicker(data-date-format="mm/dd/yyyy", required)
                  .col-rs.col-xs-6.input-wrap.clockpicker
                    label.label-control(for='mdInputTime') time
                    input#mdInputTime.form-control(type='text', name='field_time', required)

              .col-md-12
                .label-control.noCursor # people
                .row.input-row.number-of-reversed
                  .col-rs.col-xs-6.input-wrap.fzReset
                    //         .number-of-reversed         *
                    select#mdReservMan
                      option(value='1') 1
                      option(value='2') 2
                      option(value='3') 3
                      option(value='4') 4
                      option(value='5') 5
                      option(value='6') 6
                  .col-rs.col-xs-6.input-wrap
                    input#mdCheckReset(type="checkbox", value="")
                    label(for='mdCheckReset')
                      i.fa.fa-check
                      span.span I have more than 6 people in my party

              .col-md-12
                .form-group
                  .label-control.noCursor Special requests
                  textarea.form-control(name='field_massage', placeholder='')

            .btn-wrap
              button.btn.btn--darker(type='submit') make reservation

//         end  popup reservation form         /